<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/curve"
        android:gravity="start"
        android:lineSpacingExtra="6sp"
        android:maxWidth="288dp"
        android:minWidth="100dp"
        android:minLines="1"
        android:maxEms="13"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="17dp"
        android:text="dafasdfasdfasdfadasdfadsfafasfasdfaf"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/faded_text"
        android:textSize="12sp"

        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_text"
        app:layout_constraintEnd_toStartOf="@+id/seen_image"/>

    <ImageView
        android:id="@+id/seen_image"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:elevation="4dp"
        android:src="@drawable/ic_read_icon"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="@+id/message_text"
        app:layout_constraintEnd_toEndOf="@+id/message_text" />

</androidx.constraintlayout.widget.ConstraintLayout>