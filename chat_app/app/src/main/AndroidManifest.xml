<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chat_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_green"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_round_green"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".menu.ChangePassword" />
        <activity android:name=".splash.splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".chat_page.ChatPage" />
        <activity android:name=".menu.profile" />
        <activity
            android:name=".fragments.fragments"
            android:label="@string/title_activity_fragments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".login.register" />
        <activity android:name=".login.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>